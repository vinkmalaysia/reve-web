{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true
  },
  "extends": [
    "eslint-config-semistandard",
    "plugin:react/recommended"
  ],
  "rules": {
    "camelcase": "off",
    "react/prop-types": "off",
    "comma-dangle": ["error", "always-multiline"],
    "import/no-webpack-loader-syntax": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
